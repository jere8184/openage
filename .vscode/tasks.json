{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"options":
			{
				"cwd": "${workspaceFolder}/build"
			},
			"label": "CMake: config",
			"command": "cmake",
			"args": ["-DCMAKE_TOOLCHAIN_FILE=C:/vcpkg/scripts/buildsystems/vcpkg.cmake", "-DDOWNLOAD_NYAN=YES", 
			  "-DFLEX_EXECUTABLE=C:\\win_flex_bison-latest", ".."],
			"problemMatcher": "$gcc"
		},
		{
			"type": "shell",
			"options":
			{
				"cwd": "${workspaceFolder}/build"
			},
			"label": "CMake: build",
			"command": "cmake",
			"args": ["--build", ".", "--config", "RelWithDebInfo"],
			"problemMatcher": "$gcc"
		}
	]
}